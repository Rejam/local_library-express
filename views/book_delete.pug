extends layout

block content
  h1 #{title}: #{book.title}

  if bookinstances.length
    p Delete the following copies before trying to delete the book.

    div(style='margin-left:20px;margin-top:20px')
      h4 Copies

      dl
      each copy in bookinstances
        dt
          a(href=copy.url)= copy.imprint
        dd= copy.status
        
  else
    p Do you really want to delete this book?

    form(method='POST' action="")
      .form-group
        input#bookid.form-control(
          type="hidden"
          name='bookid'
          required=true
          value=book._id
        )
      button.btn.btn-danger Delete